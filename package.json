{
  "dependencies": {
    "bootstrap": "^5.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "npm-run-all2": "^6.0.6",
    "purgecss": "^5.0.0",
    "sass": "^1.64.2"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "webp-converter": "^2.3.3"
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "dev": "npm-run-all --parallel dev:*",
    "build:app": "node build.js",
    "build:css": "npm-run-all -s build-css:*",
    "build-css:sass": "sass --no-source-map --style=compressed scss:public/css",
    "build-css:purgecss": "purgecss --css ./public/css/*.css --content ./views/**/*.ejs ./views/**/**/*.ejs ./public/js/*.js ./public/js/**/.js ./build/**/index.html ./build/*.shtml ./node_modules/bootstrap/dist/js/bootstrap.bundle.min.js --output ./public/css/",
    "dev:app": "nodemon app.js",
    "dev:sass": "sass --watch --no-source-map scss:public/css",
    "webp": "node utils/convertWebp.js"
  }
}