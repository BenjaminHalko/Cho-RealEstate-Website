{
  "dependencies": {
    "bootstrap": "^5.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "npm-run-all2": "^6.0.6",
    "purgecss": "^5.0.0",
    "sass": "^1.64.2",
    "webpack": "^5.88.2"
  },
  "scripts": {
    "build": "npm-run-all build-app-and-sass purgecss",
    "dev": "npm-run-all --parallel dev-app dev-sass",

    "build-app-and-sass": "npm-run-all --parallel build-app build-sass",
    "build-app": "node build.js",
    "build-sass": "sass --no-source-map --style=compressed scss:public/css",
    "purgecss": "purgecss --css ./public/css/*.css --content .views/**/*.ejs ./build/**/*.html ./build/*.shtml ./public/js/*.js ./public/js/**/.js ./build/js/components/bootstrap.js --output ./public/css/",
    
    "dev-app": "nodemon dev_app.js",
    "dev-sass": "sass --watch --no-source-map scss:public/css",
    "webp": "node helper/convertWebp.js"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "webp-converter": "^2.3.3"
  }
}
