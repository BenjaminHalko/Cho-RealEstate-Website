<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header'); %>
    <link rel="stylesheet" href="/css/home.css">
    <script src="/js/_location_card.js"></script>
    <title>Kitty Cho | Personal Real Estate Corporation</title>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>

    <!-- Main -->
    <div class="main">
        <%- include('../partials/background', {background: featured}); %>
        <div class="main-content d-inline-flex justify-content-center align-items-center flex-wrap">
            <div class="main-content__left d-inline-flex flex-column justify-content-center align-items-center">
                <img src="/images/common/headshot.png" alt="headshot">
                <a class="btn btn-primary d-inline-flex justify-content-center align-items-center" href="mailto:kittychosutton@gmail.com" role="button" style="--bs-btn-font-size: 2rem; gap: 10px; width: 100%">
                    Contact
                    <svg width="32" height="32">
                        <use xlink:href="/svg/person-lines-fill.svg#id"/>
                    </svg>
                </a>
            </div>
            <%- include('../partials/location_card', {location: featured, isFeatured: true}); %>
        </div>
    </div>

    <!-- Instagram -->
    <% if(instagramData != undefined) { %>
    <div class="instagram">
        <div class="instagram_header">
            <a href="https://www.instagram.com/<%- instagramData.username %>/" target="_blank">
                <img src="<%- instagramData.profile_picture_url %>" alt="profile_picture" width="86px" height="86px">
            </a>
            <div class="user_info">
                <div class="d-inline-flex flex-wrap align-items-center" style="gap: 10px">
                    <a class="username" href="https://www.instagram.com/<%- instagramData.username %>/" target="_blank">@<%- instagramData.username %></a>
                    <a class="follow_button btn btn-primary d-inline-flex justify-content-center align-items-center" style="margin-top: 6px; margin-bottom: auto; gap: 6px" href="https://www.instagram.com/<%- instagramData.username %>/" target="_blank" role="button">
                        Follow
                        <svg width="18" height="18">
                            <use xlink:href="/svg/instagram.svg#id"/>
                        </svg>
                    </a>
                </div>
                <p class="info"><b><%- instagramData.media_count %></b> posts • <b><%- instagramData.followers_count %></b> followers • <b><%- instagramData.follows_count %></b> following</p>
                <p class="bio"><%- instagramData.biography %></p>
            </div>
        </div>
        <% if (instagramData != undefined) { %>
        <div class="instagram_cards">
        <% for(post of instagramData.media.data.slice(0,12)) { %>
        <a class="instagram_card" href="<%- post.permalink %>" target="_blank" style="background-image: url('<%- (post.media_type == `VIDEO`) ? post.thumbnail_url : post.media_url %>')">
            <% if (post.media_type == `VIDEO`) { %>
            <div class="video_icon">
                <svg class="video_icon" width="64px" height="64px">
                    <use xlink:href="/svg/play-fill.svg#id"/>
                </svg>
            </div>
            <% } %>
            <div class="overlay">
                <span><svg width="20" height="20" style='margin-right: 6px'><use xlink:href="/svg/suit-heart-fill.svg#id"/></svg><%- post.like_count %></span>
                <span><svg width="20" height="20" style='margin-right: 6px'><use xlink:href="/svg/chat-fill.svg#id"/></svg><%- post.comments_count %></span>
            </div>
        </a>
        <% } %>
        </div>
        <% } %>
    </div>
    <% } %>
</body>
</html>