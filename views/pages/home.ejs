<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header'); %>
    <link rel="stylesheet" href="./css/home.css">
    <script src="./js/_location_card.js"></script>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>

    <!-- Main -->
    <div class="main">
        <span class="main-background" style="background-image: url('/images/locations/<%= featured.id %>/<%= featured.main_background %>')"></span>
        <div class="main-content d-inline-flex justify-content-center align-items-center flex-wrap">
            <div class="main-content__left d-inline-flex flex-column justify-content-center align-items-center">
                <img src="./images/home/headshot.png" alt="headshot">
                <a class="btn btn-primary d-inline-flex justify-content-center align-items-center" href="#" role="button" style="--bs-btn-font-size: 2rem; gap: 10px; width: 100%">
                    Contact
                    <svg width="32" height="32">
                        <use xlink:href="./svg/person-lines-fill.svg#id"/>
                    </svg>
                </a>
            </div>
            <%- include('../partials/location_card', {location: featured, isFeatured: true}); %>
        </div>
    </div> 
</body>
</html>