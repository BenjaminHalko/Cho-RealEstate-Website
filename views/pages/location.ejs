<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header'); %>
    <link rel="stylesheet" href="/css/location.css">
    <title><%= location.name %> by <%= location.company %></title>
    <meta name="description" content="<%= location.desc %>">
    <meta property="og:title" content="<%= location.name %> by <%= location.company %>"/>
    <meta property="og:description" content="<%= location.desc %>"/>
    <meta property="og:url" content="https://kittycho.ca/<%= location.id %>/">
    <meta property="og:image" content="https://kittycho.ca/images/<%= location.id %>/<%= location.card_image %>"/>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>

    <!-- Main -->
    <div class="main">
        <%- include('../partials/background', {background: location}); %>
        <div class="title">
            <div class="contain">
                <h1 class="name"><%= location.name %></h1>
                <p class="company"> by <%= location.company %></p>
            </div>
        </div>
        <div class="main-content">
            <div class="content">
                <div class="columns">
                    <div class="information">
                        <table class="table">
                            <tr>
                                <td>Location</td>
                                <td><%- location.catagory %> - <%- location.location %></td>
                            </tr>
                            <% for(let info in location.info) { %>
                            <tr>
                                <td><%= info %></td>
                                <td><%= location.info[info] %></td>
                            </tr>
                            <% } %>
                        </table>
                        <% if(location.state == "sold") { %>
                            <div class="sold" style="margin-bottom: 20px">
                                <h3>SOLD OUT - CONTACT ME FOR ASSIGNMENTS</h3>
                                <%- include('../partials/contact', {tiny: true, subject: 'Question about '+location.name }); %>
                            </div>
                            <% } %>
                        <%- include(`../partials/locations/${location.id}.ejs`); %>
                        <div class=buttons>
                            <% for(pdf of location.pdfs) { %>
                            <a class="btn btn-primary d-inline-flex justify-content-center align-items-center" href="/files/<%= location.id %>/<%= pdf.file %>" role="button" target="_blank">
                                <%= pdf.name %>
                                <svg width="20" height="20">
                                    <use xlink:href="/svg/<%= pdf.icon %>.svg#id"/>
                                </svg>
                            </a>
                            <% } %>
                        </div>
                        <% if(location.state != "sold") { %>
                        <p style="margin-top: 20px"><b>If you have any questions or wish to see the price:</b></p>
                        <%- include('../partials/contact', {tiny: true, subject: 'Question about '+location.name }); %>
                        <% } %>
                    </div>
                    <div class="media">
                        <% if (typeof location.video_id !== 'undefined') { %>
                        <div class="video_wrapper">
                            <iframe src="https://tube.rvere.com/embed?v=<%= location.video_id %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        </div>
                        <% } %>

                        <% if (typeof location.images !== 'undefined') { %>
                        <% for(let i = 0; i < location.images.length; i++) { %>
                        <img src="/images/<%= location.id %>/<%= location.images[i] %>" class="single-img">
                        <% } %>

                        <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <% for(let i = 0; i < location.images.length; i++) { %>
                                <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>" aria-current="true" aria-label="Slide <%= i + 1 %>"></button>
                                <% } %>
                            </div>
                            <div class="carousel-inner">
                                <% for(let i = 0; i < location.images.length; i++) { %>
                                <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
                                    <img src="/images/<%= location.id %>/<%= location.images[i] %>">
                                </div>
                                <%  } %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <% } %>
                    </div>
                </div>

                
            </div>
            <!-- Footer -->
            <%- include('../partials/footer', {white: true}); %>
        </div>
    </div>
</body>
</html>