<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header'); %>
    <link rel="stylesheet" href="/css/location.css">
    <script src="/js/location.js"></script>
    <title><%- location.name %> - Kitty Cho | Personal Real Estate Corporation</title>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>

    <!-- Main -->
    <div class="main">
        <%- include('../partials/background', {background: location}); %>
        <div class="main-content">
            <div class="panel">
                <h1 class="name"><%- location.name %></h1>
                <h2 class="location"><%- location.catagory %> - <%- location.location %></h2>
                <%- include(`../partials/descriptions/${location.id}.ejs`); %>
                <div class=buttons>
                    <% if (location.hasBrochure) { %>
                    <a class="btn btn-primary d-inline-flex justify-content-center align-items-center" href="/files/<%= location.id %>/<%= location.id %>-brochure.pdf" role="button" target="_blank">
                        Brochure<% if (! location.hasFloorPlan) { %>/Floorplan<% } %>
                        <svg width="20" height="20">
                            <use xlink:href="/svg/card-list.svg#id"/>
                        </svg>
                    </a>
                    <% } %>
                    <% if (location.hasFloorPlan) { %>
                        <a class="btn btn-primary d-inline-flex justify-content-center align-items-center" href="/files/<%= location.id %>/<%= location.id %>-floorplan.pdf" role="button" target="_blank">
                            Floorplan
                            <svg width="20" height="20">
                                <use xlink:href="/svg/building.svg#id"/>
                            </svg>
                        </a>
                        <% } %>
                    <% if (location.hasInfoSheet) { %>
                    <a class="btn btn-primary d-inline-flex justify-content-center align-items-center" href="/files/<%= location.id %>/<%= location.id %>-infosheet.pdf" role="button" target="_blank">
                        Information Sheet
                        <svg width="20" height="20">
                            <use xlink:href="/svg/info-circle.svg#id"/>
                        </svg>
                    </a>
                    <% } %>
                </div>
                <p style="margin-top: 20px"><b>If you have any questions or wish to see the price:</b></p>
                <%- include('../partials/contact', {tiny: true, subject: 'Question about '+location.name }); %>
            </div>
            <div class="floating-content <%- (typeof location.video_id !== 'undefined') ? 'has_video' : '' %>">
                <div class="spacing"></div>
                <div class="fixed">
                    <% if (typeof location.video_id !== 'undefined') { %>
                    <iframe src="https://www.youtube.com/embed/<%= location.video_id %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    <% } %>
                    <% if (typeof location.images !== 'undefined') { %>
                    <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <% for(let i = 0; i < location.images.length; i++) { %>
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>" aria-current="true" aria-label="Slide <%= i + 1 %>"></button>
                            <% } %>
                        </div>
                        <div class="carousel-inner">
                            <% for(let i = 0; i < location.images.length; i++) { %>
                            <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
                                <img src="/images/locations/<%= location.id %>/<%= location.images[i] %>">
                            </div>
                            <%  } %>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>