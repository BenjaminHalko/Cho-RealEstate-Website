<a class="location_card <%= type %><% if(type != '') { %> featured<% }%>" href="/<%= location.id %>" style="--background:<%= location.id %>/<%= location.background %>">
    <div class="card_inner" style="--image: url('/images/<%= location.id %>/<%= location.card_image %>');">
        <div class="card_image">
            <div class="img" style="background-image: url('/images/<%= location.id %>/<%= location.card_image %>')"></div>
            <% if(location.state == "featured") { %>
            <span class="overlay" style="--color: #00BA54"><%= (location.isListing) ? "New" : "Featured" %></span>
            <% } else if (location.state == "sold") { %>
            <span class="overlay" style="--color: #801616">Sold Out</span>
            <% } else if (location.state == "rented") { %>
            <span class="overlay" style="--color: #801616">Rented</span>
            <% } %>

            <% if(location.state != "sold" && location.state != "rented") { %>
                <% if(location.isListing) { %>
                <span class="overlay-bottom" style="--color: #9A0063">Listing</span>
                <% } else { %>
                <span class="overlay-bottom" style="--color: #063970">Presale</span>
                <% } %>
            <% } %>
        </div>
        <div class="content">
            <div class="title">
                <h1><%= location.name %></h1>
                <% if(type != '') { %>
                <p><%= location.category %> - <%= location.location %></p>
                <% } %>
            </div>
            <p class="desc"><%= location.desc %></p>
            <% if(type == 'mainFeature' || type == 'sharedFeature') { %>
            <p class="link">View Sale â†’</p>
            <% } %>
        </div>
    </div>
</a>